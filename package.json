{
  "name": "graphql-todomvc",
  "version": "1.0.0",
  "description": "TodoMVC demonstration of GraphQL",
  "scripts": {
    "start": "node dist/server/index.js",
    "build": "npm run babel-compile && npm run reason-build && npm run webpack-pack && npm run copy-static-to-dist",
    "dev": "concurrently \"npm run dev-server\" \"npm run reason-watch\" \"npm run relay-dev-compiler\"",
    "test": "echo \"Error: no test specified\" && exit 1",
    "flow": "flow",
    "dev-server": "ENV=development nodemon src/server/index.js --exec 'babel-node --inspect'",
    "reason-watch": "bsb -make-world -clean-world -w",
    "relay-dev-compiler": "ENV=development nodemon ./scripts/relay-dev-compiler.js --exec 'babel-node'",
    "update-schema": "babel-node ./scripts/update-schema.js",
    "relay-compile": "relay-compiler --src ./src/client --schema ./schema.graphql",
    "babel-compile": "babel src -d dist",
    "reason-build": "bsb -make-world -clean-world",
    "webpack-pack": "webpack",
    "copy-static-to-dist": "rm -rf dist/client/static && cp -r src/client/static dist/client/static",
    "postinstall": "npm run build"
  },
  "author": "zetavg <mail@zeta.vg>",
  "license": "MIT",
  "dependencies": {
    "atob": "^2.0.3",
    "babel-cli": "^6.26.0",
    "babel-loader": "^7.1.2",
    "babel-plugin-relay": "^1.4.1",
    "babel-polyfill": "^6.26.0",
    "babel-preset-env": "^1.6.1",
    "babel-preset-flow": "^6.23.0",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-1": "^6.24.1",
    "bs-platform": "^2.1.0",
    "bs-webapi": "^0.7.0",
    "btoa": "^1.1.2",
    "express": "^4.16.2",
    "express-graphql": "^0.6.11",
    "graphql": "^0.11.7",
    "graphql-relay": "^0.5.3",
    "graphql-subscriptions": "^0.5.5",
    "left-pad": "^1.2.0",
    "morgan": "^1.9.0",
    "react": "^16.1.1",
    "react-dom": "^16.1.1",
    "react-relay": "^1.4.1",
    "reason-react": "^0.3.0",
    "subscriptions-transport-ws": "^0.9.1",
    "uuid": "^3.1.0",
    "validate.js": "^0.12.0",
    "webpack": "^3.8.1"
  },
  "devDependencies": {
    "concurrently": "^3.5.1",
    "flow-bin": "^0.59.0",
    "nodemon": "^1.12.1",
    "relay-compiler": "^1.4.1",
    "webpack-dev-middleware": "^1.12.1",
    "webpack-hot-middleware": "^2.20.0"
  },
  "nodemonConfig": {
    "ignore": [
      "dist/*",
      "src/client/*"
    ]
  }
}
